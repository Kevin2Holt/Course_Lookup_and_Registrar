<h3>Click the button below to edit your courses</h3>

<div class="sideButton">
    <button onclick="courseEdit()" class="sideDropButton">Edit Courses</button>
    <div id="courseEdit" class="sideButton-content">
      <a href="">Add Course</a>
      <a href="">Remove Course</a>
    </div>
  </div>
  
  <script>
  /* When the user clicks on the button, 
  toggle between hiding and showing the dropdown content */
  function courseEdit() {
    document.getElementById("courseEdit").classList.toggle("show");
  }
  
  // Close the dropdown if the user clicks outside of it
  window.onclick = function(event) {
    if (!event.target.matches('.sideDropButton')) {
      let dropdowns = document.getElementsByClassName("sideButton-content");
      let i;
      for (i = 0; i < dropdowns.length; i++) {
        let openDropdown = dropdowns[i];
        if (openDropdown.classList.contains('show')) {
          openDropdown.classList.remove('show');
        }
      }
    }
  }
  </script>